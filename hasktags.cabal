build-type: Simple
cabal-version: >=1.10
extra-source-files:
  README,
  TODO,
  testcases/HUnitBase.lhs
  testcases/Repair.lhs
  testcases/blockcomment.hs
  testcases/constructor.hs
  testcases/firstconstructor.hs
  testcases/module.hs
  testcases/space.hs
