-- TODO finish implementation
Flag enable_caching
  Default: True

source-repository head
  type: git
  location: http://github.com/marcotmarcot/hasktags

Executable hasktags
    Main-Is: Main.hs
    Build-Depends:
      base >= 4 && < 5,
      bytestring >= 0.9 && < 0.10,
      directory >= 1.1 && < 1.2,
      filepath >= 1.3 && < 1.4,
      json >= 0.5 && < 0.6
    hs-source-dirs: src
    default-language: Haskell2010

Test-Suite test
  Type: exitcode-stdio-1.0
  Main-Is: Test.hs
  hs-source-dirs: src, tests
  Build-Depends:
    base >= 4 && < 5,
    HUnit >= 1.2 && < 1.3
